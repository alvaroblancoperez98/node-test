<%- include("template/cabecera.ejs", {tituloWeb:'Panel de Administración'}) %>

  <div class="container">
    <h1>CRUD Mongo</h1>
    <a class="btn btn-success my-4 btn-block" href="/entrenador/crearentrenador">Crear un nuevo entrenador</a>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#ID</th>
                    <th scope="col">nombre</th>
                    <th scope="col">descripcion</th>
                    <th scope="col">ciudad</th>
                    <th scope="col">acción</th>
                </tr>
            </thead>
            <tbody>
                <% if (arrayEntrenador.length> 0) { %>
                    <!--Haremos el foreach para recorrer el array-->
                    <% arrayEntrenador.forEach(entrenador => { %>
                        <tr>
                            <th scope="row"><%= entrenador.id %></th>
                            <td><%= entrenador.nombre %></td>
                            <td><%= entrenador.descripcion %></td>
                            <td><%= entrenador.ciudad %></td>
                            <td>
                                <a class="btn btn-warning btn-sm" href="/entrenador/<%= entrenador.id %>">Editar/Eliminar</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
          </tbody>
        </table>
    </div>


<%- include("template/footer.ejs") %>